#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<MainScreen>:
    CarWidget:
        id: car
        size: 20, 10
        canvas:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: self.center
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'car.png'
            PopMatrix

    SensorWidget:
        id: left_sensor
        size: 10,10
        canvas:
            Color:
                rgba: 1,0,0,1
            Ellipse:
                pos: self.pos
                size: self.size

    SensorWidget:
        id: front_sensor
        size: 10,10
        canvas:
            Color:
                rgba: 0,1,1,1
            Ellipse:
                pos: self.pos
                size: self.size

    SensorWidget:
        id: right_sensor
        size: 10,10
        canvas:
            Color:
                rgba: 1,1,0,1
            Ellipse:
                pos: self.pos
                size: self.size

